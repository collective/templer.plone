from plone.app.testing import PloneWithPackageLayer
from plone.app.testing import IntegrationTesting
from plone.app.testing import FunctionalTesting

import ${namespace_package}.${package}


${namespace_package.upper()}_${package.upper()} = PloneWithPackageLayer(
    zcml_package=${namespace_package}.${package},
    zcml_filename='testing.zcml',
#if str($add_profile) == 'True'
    gs_profile_id='${namespace_package}.${package}:testing',
#end if
    name="${namespace_package.upper()}_${package.upper()}")

${namespace_package.upper()}_${package.upper()}_INTEGRATION = IntegrationTesting(
    bases=(${namespace_package.upper()}_${package.upper()}, ),
    name="${namespace_package.upper()}_${package.upper()}_INTEGRATION")

${namespace_package.upper()}_${package.upper()}_FUNCTIONAL = FunctionalTesting(
    bases=(${namespace_package.upper()}_${package.upper()}, ),
    name="${namespace_package.upper()}_${package.upper()}_FUNCTIONAL")
