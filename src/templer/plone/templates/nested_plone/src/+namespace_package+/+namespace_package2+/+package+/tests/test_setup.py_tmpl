from ${namespace_package}.${namespace_package2}.${package}.testing import\
    ${namespace_package.upper()}_${namespace_package2.upper()}_${package.upper()}_INTEGRATION_TESTING


class TestExample(unittest.TestCase):

    layer = ${namespace_package.upper()}_${namespace_package2.upper()}_${package.upper()}_INTEGRATION_TESTING
    
    def setUp(self):
#if str($add_profile) == 'True'
        self.app = self.layer['app']
        self.portal = self.layer['portal']
        self.qi_tool = getToolByName(self.portal, 'portal_quickinstaller')
    
    def test_product_is_installed(self):
        """ Validate that our products GS profile has been run and the product 
            installed
        """
        pid = '${namespace_package}.${namespace_package2}.${package}'
        installed = [p['id'] for p in self.qi_tool.listInstalledProducts()]
        self.assertTrue(pid in installed,
                        'package appears not to have been installed')
#else
        # you'll want to use this to set up anything you need for your tests 
        # below
        pass

    def test_success(self):
        sum = 1 + 3
        self.assertEquals(sum, 4)

    def test_failure(self):
        sum = 2 + 3
        self.assertEquals(sum, 4)
